<%= form_for @email, :url => notifica_path do |form| %>
  <p id="notice"><%= notice %></p>
  <fieldset class="fields">
    <div class="field">
      <%= form.label t :name %>
      <%= form.text_field :nombre %>
    </div>
     <div class="field">
      <%= form.label t :apellido %>
      <%= form.text_field :apellido %>
    </div>
    
    <div class="field">
      <%= form.label t :organizacion %>
      <%= form.text_field :organizacion %>
    </div>
    <div class="field">
      <%= form.label t :ciudad %>
      <%= form.text_field :ciudad %>
    </div>
     <div class="field">
      <%= form.label t :telefono %>
      <%= form.text_field :telefono %>
    </div>
      <div class="field">
      <%= form.label t :email %>
      <%= form.text_field :email %>
    </div>
     
      <%= form.hidden_field :url,:value=>request.url %>
   <% if !@contacto.nil?%>
      <%= form.hidden_field :destino,:value=>@contacto.email %>
   <%else%>
     <%= form.hidden_field :destino,:value=>'juanantonioruz@gmail.com' %>
   <%end%>
   
   
    <div class="field">
      <%= form.label t :mensaje %>
      <%= form.text_area :mensaje %>
    </div>
  </fieldset>
  
  <fieldset class="actions">
    <%= form.submit t("send") %>
  </fieldset>
<% end %>
